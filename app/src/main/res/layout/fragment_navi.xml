<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="vm"
            type="com.soarsy.cloud.vm.NaviViewModel" />
    </data>

    <ViewSwitcher
        viewSwitcher="@{vm.whichChild}"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/xrv_navi"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:scrollbars="none"
                android:adapter="@{vm.adapter}"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/xrv_navi_detail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical"
                android:adapter="@{vm.naviContentAdapter}"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
        </LinearLayout>

        <com.soarsy.cloud.view.LoadingView
            android:id="@+id/loading_view"
            loadState="@{vm.loadState}"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </ViewSwitcher>

</layout>